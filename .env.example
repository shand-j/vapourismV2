# Vapourism V2 — Environment variables (example)
# Copy this to `.env` and populate values. DO NOT commit your .env file to version control.

########################
# Core / required vars
########################
# Public store domain (e.g. my-shop.myshopify.com) — required for server-side admin API calls
PUBLIC_STORE_DOMAIN=your-shopify-store.myshopify.com

# Production domain for canonical URLs and SEO (e.g., https://www.vapourism.co.uk)
# This should be your custom domain, NOT the myshopify.com domain
PRODUCTION_DOMAIN=https://www.vapourism.co.uk

# Admin API tokens (privileged) — prefer storing these as secrets in CI / Oxygen (do not commit here)
# Use either SHOPIFY_ADMIN_TOKEN or PRIVATE_SHOPIFY_ADMIN_TOKEN depending on your deployment naming
SHOPIFY_ADMIN_TOKEN=
PRIVATE_SHOPIFY_ADMIN_TOKEN=

########################
# App / Dev
########################
# Hydrogen session secret — set to a secure random value in production
SESSION_SECRET=change-me

# Optional (storefront preview / checkout domain overrides)
PUBLIC_CHECKOUT_DOMAIN=

########################
# Feature flags / V2 architecture
########################
# Shopify-native search rollout (100 = fully enabled)
USE_SHOPIFY_SEARCH=true
SHOPIFY_SEARCH_ROLLOUT=100

# Collections-based navigation rollout (100 = fully enabled)
COLLECTIONS_NAV_ROLLOUT=100

# Brand media packs on product pages
ENABLE_BRAND_ASSETS=true

########################
# AgeVerif integration (post-checkout verification)
########################
# JWT public key (PEM) for server-side token verification (optional)
AGEVERIF_PUBLIC_KEY=
# Webhook HMAC secret for incoming AgeVerif webhooks (optional)
AGEVERIF_WEBHOOK_SECRET=
# Metafield namespace/key to persist evidence on orders/customers
AGE_VERIF_METAFIELD_NAMESPACE=vapourism
AGE_VERIF_METAFIELD_KEY=age_verification
# If true, server will attempt to create a Customer resource from a guest order email when no Customer exists
AGEVERIF_CREATE_CUSTOMER=false
# Debug logging for age-verification helpers (true/false)
AGEVERIF_DEBUG=false

########################
# Analytics (Google Analytics 4)
########################
# GA4 Measurement ID (format: G-XXXXXXXXXX)
# Used for tracking page views, e-commerce events, and user behavior
# Get this from Google Analytics: Admin > Data Streams > Web > Measurement ID
GA4_MEASUREMENT_ID=

########################
# WordPress Blog Integration (Optional)
########################
# Enable WordPress as the blog content source instead of static TypeScript files
# When enabled, blog routes will fetch content from WordPress REST API
# Users see blog content on your main domain (/blog) - they never interact with WordPress directly
WORDPRESS_ENABLED=false

# WordPress REST API URL (e.g., https://blog-admin.vapourism.co.uk/wp-json/wp/v2)
# This should be the base URL for the WordPress REST API, typically on a subdomain
# You can use hosted WordPress (WordPress.com) or self-hosted WordPress
WORDPRESS_API_URL=

# WordPress authentication token (optional, for draft preview)
# JWT token or Application Password for accessing private/draft posts
# Not needed for published posts - they're publicly accessible via REST API
WORDPRESS_AUTH_TOKEN=

# Cache TTL in seconds for WordPress API responses (default: 300 = 5 minutes)
# Lower values = fresher content but more API calls
# Higher values = better performance but slower content updates
WORDPRESS_CACHE_TTL=300

# Enable preview mode to show draft/pending posts (requires auth token)
# Set to 'true' for staging environments where editors preview unpublished content
WORDPRESS_PREVIEW_MODE=false

# End of example

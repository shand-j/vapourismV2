{
  "name": "vapourism-v2",
  "version": "2.0.0",
  "private": true,
  "description": "V2 Shopify Hydrogen storefront with native search and collections",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "dev": "shopify hydrogen dev --codegen",
    "setup": "npm ci && npm run codegen && npx playwright install",
    "build": "shopify hydrogen build --codegen",
    "preview": "shopify hydrogen preview --build",
    "codegen": "shopify hydrogen codegen",
    "lint": "eslint --no-error-on-unmatched-pattern .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:seo": "vitest run tests/unit/seo-*.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "seo:audit": "lhci autorun --config=.lighthouserc.cjs",
    "seo:audit:local": "lhci collect --config=.lighthouserc.cjs",
    "seo:crawl": "lighthouse-parade"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@remix-run/react": "^2.16.1",
    "@remix-run/server-runtime": "^2.16.1",
    "@shopify/hydrogen": "2025.1.4",
    "@shopify/remix-oxygen": "^2.0.12",
    "@shopify/shopify-api": "^4.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.5",
    "graphql": "^16.10.0",
    "graphql-tag": "^2.12.6",
    "isbot": "^5.1.22",
    "lucide-react": "^0.525.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "seo-analyzer": "^1.0.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@graphql-codegen/cli": "5.0.2",
    "@lhci/cli": "^0.15.1",
    "lighthouse-parade": "^3.1.0",
    "@playwright/test": "^1.56.1",
    "@remix-run/dev": "^2.16.1",
    "@remix-run/fs-routes": "^2.16.1",
    "@remix-run/route-config": "^2.16.1",
    "@shopify/cli": "^3.88.0",
    "@shopify/hydrogen-codegen": "^0.3.3",
    "@shopify/mini-oxygen": "^4.0.0",
    "@shopify/oxygen-workers-types": "^4.1.6",
    "@shopify/prettier-config": "^1.1.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.14.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.4.2",
    "typescript": "^5.6.2",
    "vite": "^6.2.4",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^4.0.15"
  }
}

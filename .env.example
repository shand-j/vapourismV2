# Vapourism V2 — Environment variables (example)
# Copy this to `.env` and populate values. DO NOT commit your .env file to version control.

########################
# Core / required vars
########################
# Public store domain (e.g. my-shop.myshopify.com) — required for server-side admin API calls
PUBLIC_STORE_DOMAIN=your-shopify-store.myshopify.com

# Admin API tokens (privileged) — prefer storing these as secrets in CI / Oxygen (do not commit here)
# Use either SHOPIFY_ADMIN_TOKEN or PRIVATE_SHOPIFY_ADMIN_TOKEN depending on your deployment naming
SHOPIFY_ADMIN_TOKEN=
PRIVATE_SHOPIFY_ADMIN_TOKEN=

########################
# App / Dev
########################
# Hydrogen session secret — set to a secure random value in production
SESSION_SECRET=change-me

# Optional (storefront preview / checkout domain overrides)
PUBLIC_CHECKOUT_DOMAIN=

########################
# Feature flags / V2 architecture
########################
# Shopify-native search rollout (100 = fully enabled)
USE_SHOPIFY_SEARCH=true
SHOPIFY_SEARCH_ROLLOUT=100

# Collections-based navigation rollout (100 = fully enabled)
COLLECTIONS_NAV_ROLLOUT=100

# Brand media packs on product pages
ENABLE_BRAND_ASSETS=true

########################
# AgeVerif integration (post-checkout verification)
########################
# JWT public key (PEM) for server-side token verification (optional)
AGEVERIF_PUBLIC_KEY=
# Webhook HMAC secret for incoming AgeVerif webhooks (optional)
AGEVERIF_WEBHOOK_SECRET=
# Metafield namespace/key to persist evidence on orders/customers
AGE_VERIF_METAFIELD_NAMESPACE=vapourism
AGE_VERIF_METAFIELD_KEY=age_verification
# If true, server will attempt to create a Customer resource from a guest order email when no Customer exists
AGEVERIF_CREATE_CUSTOMER=false
# Debug logging for age-verification helpers (true/false)
AGEVERIF_DEBUG=false

# End of example
